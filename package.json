{
  "name": "linter-coffeelint",
  "main": "./src/index",
  "private": true,
  "version": "2.0.75",
  "description": "Lint CoffeeScript on the fly, using coffeelint",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-coffeelint.git"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.7.0 <2.0.0"
  },
  "activationHooks": [
    "language-coffee-script:grammar-used",
    "language-iced-coffee-script:grammar-used"
  ],
  "package-deps": [
    [
      {
        "name": "linter",
        "minimumVersion": "2.2.0"
      },
      {
        "name": "atom-ide-ui",
        "minimumVersion": "0.13.0"
      }
    ]
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "apm test"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "@coffeelint/cli": "5.0.1",
    "atom-linter": "10.0.0",
    "atom-package-deps": "7.2.3",
    "ignore": "5.1.8",
    "resolve": "1.20.0",
    "semver": "7.3.5"
  },
  "devDependencies": {
    "@semantic-release/apm-config": "8.0.0",
    "eslint": "7.26.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "jasmine-fix": "1.3.1",
    "semantic-release": "17.4.3"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "arrow-parens": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": false
    },
    "env": {
      "node": true,
      "browser": true
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticCommits": true,
    "rangeStrategy": "pin",
    "devDependencies": {
      "automerge": true,
      "commitMessageTopic": "devDependency {{depName}}"
    },
    "packageRules": [
      {
        "packagePatterns": [
          "^eslint"
        ],
        "groupName": "ESLint packages"
      }
    ]
  },
  "release": {
    "extends": "@semantic-release/apm-config"
  }
}
