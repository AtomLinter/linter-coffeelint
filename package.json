{
  "name": "linter-coffeelint",
  "main": "./src/index",
  "private": true,
  "version": "2.0.0",
  "description": "Lint CoffeeScript on the fly, using coffeelint",
  "repository": "https://github.com/AtomLinter/linter-coffeelint.git",
  "license": "MIT",
  "engines": {
    "atom": ">=1.7.0 <2.0.0"
  },
  "activationHooks": [
    "language-coffee-script:grammar-used",
    "language-iced-coffee-script:grammar-used"
  ],
  "package-deps": [
    "linter:2.0.0"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "apm test"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^4.6.1",
    "coffeelint": "^2.1.0",
    "ignore": "^3.3.7",
    "resolve": "^1.5.0",
    "semver": "^5.5.0"
  },
  "devDependencies": {
    "eslint": "^4.18.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "jasmine-fix": "^1.3.1"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": false
    },
    "env": {
      "node": true,
      "browser": true
    }
  }
}
